<%  include   partials/header %>

<div class="container mt-5">
    <div class="row">
       
        <div class="col-md-4">
          <div class="card">
              <div class="card-header"><h5 class="text-center">editar </h5></div>
              <div class="card-body">
                  
                    <form action="/update/<%= data[0].id%>" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" value="<%= data[0].name %>" name="name" placeholder="Nombre: ">
                        </div>
        
                        <div class="form-group">
                             <input type="text" class="form-control" value="<%= data[0].address %>" name="address" placeholder="direccion: ">
                        </div>
        
                        <div class="form-group">
                             <input type="tel" class="form-control" value="<%= data[0].phone %>" name="phone" placeholder="telefono: ">
                        </div>
        
                        <button type="submit" class="btn btn-warning btn-block btn-sm">edit</button>
                    </form>
                
              </div>
          </div>
        </div>
    </div>
</div>







